private List<ComplaintObj> getCustDetails(String file) {
List<ComplaintObj> custList =null;
Path pathToFile=Paths.get(file);
try{
BufferedReader br=Files.newBufferedReader(pathToFile);
String row=br.readLine();
while(row!=null){
String[] attributes=row.split(",");
ComplaintObj complaint=getoneDetails(attributes);
custList.add(complaint);
}
}catch(IOException e)
{
e.printStackTrace();
}
return custList;

}



private ComplaintObj getoneDetails(String[] attributes) {
String Subproduct=attributes[1];
ComplaintObj complaint=new ComplaintObj();
return complaint;

}
