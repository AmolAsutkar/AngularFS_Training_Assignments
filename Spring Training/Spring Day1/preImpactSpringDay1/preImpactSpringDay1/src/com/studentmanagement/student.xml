<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean class="com.studentmanagement.Student" name="student1">
		<property name="student_id"><value>101</value></property>
		<property name="student_name"><value>John</value></property>
		<property name="student_address"><value>Shanghai</value></property>
	</bean>
	
	<bean class="com.studentmanagement.Student" name="student2">
		<property name="student_id" value="102"/>
		<property name="student_name" value="James"/>
		<property name="student_address" value="Delhi"/>
	</bean>

	<bean class="com.studentmanagement.Student" name="student3" p:student_id="103" p:student_name="Simon" p:student_address="Mumbai"/>
		
	

</beans>